@using RealEstateApp.Core.Application.ViewModels.Properties
@model SavePropertiesViewModel
@{
    ViewData["Title"] = "Delete Property";
}

<div class="row">

    <div class="col-6 offset-3">
        <div class="col-4">
            <div class="card shadow-sm mb-3">
                <h4>Are you sure that you want to delete this property?</h4>
                <img class="bd-placeholder-img card-img-top" src="@Model.ImagePathOne" />

                <div class="card-body">
                    <p class="card-text">Code: @Model.Code</p>
                    <p class="card-text">Price: @Model.Price</p>

                    <form method="post" asp-controller="Agent" asp-action="DeletePost">

                        <input type="hidden" asp-for="Id" />

                        <a asp-controller="Agent" asp-action="GetAll" class="btn btn-warning">Cancel</a>
                        <button type="submit" class="btn btn-danger">Delete</button>

                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

