@using RealEstateApp.Core.Application.ViewModels.Users
@model SaveUserViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="container-fluid">

    <div class="row">

        <div class="col-6 offset-3">

            <div class="card">

                <div class="card-header bg-dark text-light">
                    <h4>Creating a new user</h4>
                </div>

                <div class="card-body">
                    @if (Model.HasError)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <p>@Model.Error</p>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form method="post" enctype="multipart/form-data" asp-controller="User" asp-action="Register">

                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label">Fisrt Name:</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label">Last Name:</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label">Username:</label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="File" class="form-label">Profile Image:</label>
                            <input asp-for="File" required class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email:</label>
                            <input asp-for="Email" class="form-control" required/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password:</label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Confirm Password:</label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">Phone:</label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>


                        <div class="mb-3">
                            <label for="role" class="form-label">User's Type:</label>
                            <select for="role" class="form-select">
                                @foreach (var item in ViewBag.UserTypes)
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>
                        </div>



                        <a asp-controller="User" asp-action="Index" class="btn btn-warning">Go back</a>

                        <button type="submit" class="btn btn-primary">Save</button>

                    </form>




                </div>

            </div>

        </div>

    </div>

</div>