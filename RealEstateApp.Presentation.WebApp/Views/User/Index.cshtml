@using RealEstateApp.Core.Application.ViewModels.Users
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<section class="container">
    <div class="row mx-auto">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-bold mt-4 text-center text-primary">🏢 Real Estate App</h1>
            <p class="fs-3 fw-bold text-secondary mt-1 text-center">
                Welcome to Real State App, sign in to interact with the system. <i class="text-white">🚀</i>
            </p>
        </div>
    </div>
</section>


<div class="col-6 mx-auto card bg-dark text-white mt-5 mb-5" style="border-radius: 1rem;">
    <div class="card-body">

        <h2 class="fw-bold mb-3 text-uppercase text-center mt-2">Updating Type Of Sales</h2>
        <p class="text-white-50 fs-5 mb-3 text-center">Please fill in the fields below</p>
        @Html.ValidationSummary(false, "", new {@class = "text-danger fs-5"})
        @if (Model.HasError)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <p>@Model.Error</p>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="Index" asp-controller="User" method="POST">

            <div class="p-3">
                <label asp-for="Email" class="form-label text-white"><strong>Email <small class="text-danger"> *</small></strong></label>
                <input type="email" class="form-control bg-dark text-white border-white form-control-lg" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="p-3 pt-0 mb-3">
                <label asp-for="Password" class="form-label text-white"><strong>Password <small class="text-danger"> *</small></strong></label>
                <input type="password" class="form-control bg-dark text-white border-white form-control-lg" asp-for="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button class="btn btn-primary  btn-lg float-end" type="submit">
                <i class="bi bi-check2-square"></i>
                Done
            </button>
            <a asp-controller="User" asp-action="ForgotPassword" class="btn btn-light btn-lg float-end me-2">Password Forgotten</a>
        </form>
    </div>
</div>

